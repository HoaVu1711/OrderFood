<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent">
            <ImageView
                android:background="@drawable/brle_image"
                android:id="@+id/img_anhnen"
                android:src="@drawable/bunbohue"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="200dp">
            </ImageView>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_monan"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/suonnuong"
                android:baselineAlignBottom="true"
                android:layout_width="120dp"
                android:layout_height="120dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/tv_ten"
                android:text="Bun Thit Nuong"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#090909"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_gia"
                android:layout_marginTop="5dp"
                android:text="150.000 VND"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#DC1313"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_datahng"
                android:layout_marginTop="20dp"
                android:text="Order Food"
                android:textSize="18sp"
                android:background="#060210"
                android:textStyle="bold"
                android:textColor="#E8DCDC"
                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/img_bottom"
                android:layout_marginTop="5dp"
                android:src="@drawable/botomapp"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>




</RelativeLayout>